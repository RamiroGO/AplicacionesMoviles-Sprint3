<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp" /><![CDATA[
    />



    ]]>

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/imageView"
        android:hint="Nombre" />

    <TextView
        android:id="@+id/txtDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtNombre"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/txtNombre"
        android:hint="Dirección" />

    <TextView
        android:id="@+id/txtPropietario"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtDireccion"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@id/txtDireccion"
        android:hint="Propietario" />

    <TextView
        android:id="@+id/txtTelefono"
        android:layout_width="59dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/txtPropietario"
        android:layout_alignParentRight="true"
        android:hint="Teléfono" />
</RelativeLayout>