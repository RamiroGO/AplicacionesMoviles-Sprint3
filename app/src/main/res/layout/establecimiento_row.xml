<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/imageView"
        android:hint="Nombre" />

    <TextView
        android:id="@+id/txtDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtNombre"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/imageView"
        android:hint="Dirección" />

    <TextView
        android:id="@+id/txtPropietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNombre"
        android:layout_alignStart="@+id/txtNombre"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:hint="Propietario" />

    <TextView
        android:id="@+id/txtTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtDireccion"
        android:layout_alignTop="@+id/txtPropietario"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:hint="Teléfono" />
</RelativeLayout>